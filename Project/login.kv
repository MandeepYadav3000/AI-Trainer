<MagicButton@MagicBehavior+MDFillRoundFlatButton>

MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color:  1,1,1,1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y":.94}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "signup"

        MDLabel:
            text: "W e l c o m e !"
            halign: 'left'
            outline_color: (1,1,1)
            outline_width: 1
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x":.6, "center_y":.85}
            color: rgba(0, 0, 0, 255)


        MDLabel:
            text: "Sign in to continue"
            halign: 'left'
            outline_color: (1,1,1)
            outline_width: 1
            font_name: "BPoppins"
            font_size: "18sp"
            pos_hint: {"center_x":.6, "center_y":.79}
            color: rgba(0, 0, 0, 255)

        MDTextField:
            hint_text: "Email / Username "
            font_name: "MPoppins"
            size_hint_x: .6
            helper_text_mode: "on_focus"
            icon_right: "face-man-outline"
            icon_right_color: app.theme_cls.primary_color
            pos_hint: {"center_x":0.5, "center_y":0.65}
            multiline: False

        MDTextField:
            hint_text: "Enter Password"
            font_name: "MPoppins"
            size_hint_x: .6
            helper_text: "or click on forgot password"
            helper_text_mode: "on_focus"
            pos_hint: {"center_x":0.5, "center_y":0.5}
            multiline: False
            password: True

        MagicButton:
            text: "Login"
            size_hint: .66, .065
            pos_hint: {"center_x":0.5,"center_y":0.35}
            font_name: "BPoppins"
            on_release:
                self.wobble()
                root.manager.transition.direction = 'left'
                root.manager.current = "main"


        MDTextButton:
            text: "Forgot Password?"
            font_name: "BPoppins"
            font_size: "12sp"
            pos_hint: {"center_x":.5, "center_y":.28}
            color: rgba(68,78,132,255)

        MDLabel:
            text: "or"
            color: rgba(52,0,231,255)
            pos_hint: {"center_y": .22}
            font_name: "13sp"
            font_name: "BPoppins"
            halign: "center"

        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint: .3, .002
            pos_hint: {"center_x":.3, "center_y":.218}

        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint: .3, .002
            pos_hint: {"center_x":.7, "center_y":.218}

        MDLabel:
            text: "Social Media Login"
            font_name: "BPoppins"
            font_size: "13sp"
            halign: "center"
            pos_hint: {"center_y":.16}
            color: rgba(135,133,193,255)

        MDGridLayout:
            cols: 3
            size_hint: .6,.07
            pos_hint: {"center_x":.5, "center_y":.1}
            Image:
                source: "asset/logo1.png"
            Image:
                source: "asset/logo2.png"
            Image:
                source: "asset/logo3.png"

