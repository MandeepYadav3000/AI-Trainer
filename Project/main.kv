<MagicButton@MagicBehavior+MDFillRoundFlatButton>

MDScreen:
    name: "main"

    MDTextField:
        hint_text: "Age "
        font_name: "MPoppins"
        size_hint_x: .6
        pos_hint: {"center_x":0.5, "center_y":0.75}
        multiline: False

    MDTextField:
        hint_text: "Height "
        font_name: "MPoppins"
        size_hint_x: .6
        pos_hint: {"center_x":0.5, "center_y":0.55}
        multiline: False


    MDTextField:
        hint_text: "Weight"
        font_name: "MPoppins"
        size_hint_x: .6
        pos_hint: {"center_x":0.5, "center_y":0.35}
        multiline: False

    MagicButton:
        text: "Let's Go"
        color: rgba(0,0,59,255)
        halign: "center"
        pos_hint: {"center_x":.5, "center_y":.2}
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "main_page"

